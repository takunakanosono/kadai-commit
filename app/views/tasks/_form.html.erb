<%= form_for(task) do |f| %>

  
<% if task.errors.any? %>

    <div id="error_explanation">

      <ul>
        
        <% task.errors.full_messages.each do |error| %>

          <li>
              
           <%= error %>
           
          </li>
        
        <% end %>

      
      </ul>
      
    </div>
  
<% end %>


  
<%= f.label :title, 'タイトル' %>

  
<%= f.text_field :title %>


  
<%= f.label :content, 'タスク' %>

  
<%= f.text_field :content %>


  
<%= f.submit '投稿' %>

<% end %>


<%= link_to '新規タスクの投稿', new_task_path %>